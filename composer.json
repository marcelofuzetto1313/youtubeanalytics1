{
  "name": "marcelo/youtububestats-my-analytics",
  "description": "Meu Analytics em PHP (YouTube Analytics API + YouTube Data API): métricas diárias e contagem de uploads/shorts por dia.",
  "type": "project",
  "license": "proprietary",
  "require": {
    "php": ">=8.0",
    "ext-json": "*",
    "ext-curl": "*",
    "ext-openssl": "*",
    "ext-mbstring": "*",
    "ext-pdo": "*",
    "ext-pdo_sqlite": "*",
    "ext-sqlite3": "*",
    "google/apiclient": "^2.15"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "scripts": {
    "post-install-cmd": [
      "@php -r \"echo 'Composer install OK\\n';\""
    ],
    "build-vendor": [
      "composer install --no-dev --optimize-autoloader"
    ]
  }
}
